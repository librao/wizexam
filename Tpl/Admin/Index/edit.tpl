<div class="row">
	<div class="span9">
		<div class="my_block">
			<h3 class="heading">{$SUBTITLE}</h3>
			<form class="form_validation_ttip">
				<div class="formSep">
					<div class="row-fluid">
						<div class="span12">
							<label>Title 标题 <span class="f_req">*</span></label>
							<input type="text" name="title" class="span8" />
						</div>
					</div>
					<div class="row-fluid">
						<div class="span12">
							<label>category 类别</label>
							<input type="text" name="category" class="span8" />
						</div>
					</div>
				</div>
				<div class="formSep">
					<div class="row-fluid">
						<div class="span12">
							<label>Summary 摘要</label>
							<textarea name="summary" id="summary" cols="10" rows="3" class="span8"></textarea>
						</div>
					</div>
					<div class="row-fluid">	
						<div class="span12">
							<label>Content 内容 <span class="f_req">*</span></label>
							<textarea name="content" id="content" cols="10" rows="3" class="span8"></textarea>
						</div>
					</div>
				</div>
				<div class="formSep">
					<div class="row-fluid">
						<div class="span12">
							<label>From 来源</label>
							<input type="text" name="from" class="span8" />
						</div>
					</div>
					<div class="row-fluid">
						<div class="span12">
							<label>Key Words 关键字</label>
							<input type="text" name="keyword" class="span8" />
						</div>
					</div>
				</div>
				<div class="form-actions">
					<button class="btn btn-inverse" type="submit">提交</button>
					<button class="btn">取消</button>
				</div>
			</form>
		</div>
	</div>
</div>